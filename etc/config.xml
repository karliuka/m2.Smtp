<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <system>
            <smtp>
                <enabled>0</enabled>
                <port>465</port>
                <ssl>ssl</ssl>
                <auth>login</auth>
                <pass backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <log>1</log>
                <clean>1</clean>
                <days>30</days>
            </smtp>
        </system>
    </default>
</config>
